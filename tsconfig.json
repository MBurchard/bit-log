{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],
    "skipLibCheck": true,

    "removeComments": true,
    "stripInternal": true,

    /* Linting */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules", "dist", "coverage"],
  "include": ["src/**/*.ts"]
}
